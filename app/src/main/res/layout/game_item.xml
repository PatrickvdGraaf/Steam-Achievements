<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="game"
            type="com.crepetete.steamachievements.vo.Game" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_halved"
        android:layout_marginEnd="@dimen/default_margin_halved"
        android:layout_marginTop="@dimen/default_margin_quarter"
        android:layout_marginBottom="@dimen/default_margin_quarter"
        app:cardBackgroundColor="#333"
        app:cardCornerRadius="4dp"
        android:clipToPadding="true"
        app:cardElevation="@dimen/elevation_card_default"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/game_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:transitionName="banner"
                app:layout_constraintBottom_toBottomOf="@id/game_banner"
                app:layout_constraintDimensionRatio="184:69"
                app:layout_constraintEnd_toStartOf="@id/time_info_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/time_info_container"
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:background="#73000000"
                app:layout_constraintBottom_toBottomOf="@id/game_banner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@drawable/game_banner"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/total_played_textView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:drawablePadding="@dimen/default_margin_halved"
                    android:drawableStart="@drawable/ic_all_time_24dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/default_margin"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="@dimen/default_margin_halved"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_label_small"
                    app:layout_constraintBottom_toTopOf="@id/recently_played_textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/recently_played_textView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:drawablePadding="@dimen/default_margin_halved"
                    android:drawableStart="@drawable/ic_recent_24dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/default_margin_halved"
                    android:paddingEnd="@dimen/default_margin"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="@dimen/default_margin_halved"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_label_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/total_played_textView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#57000000"
                android:paddingBottom="@dimen/default_margin_halved"
                android:paddingEnd="@dimen/default_margin"
                android:paddingStart="@dimen/default_margin"
                android:paddingTop="@dimen/default_margin_halved"
                android:text="@{game.name}"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_header_five"
                app:layout_constraintBottom_toTopOf="@+id/progressContainer"
                app:layout_constraintTop_toBottomOf="@+id/game_banner" />

            <FrameLayout
                android:id="@+id/progressContainer"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:layout_constraintBottom_toTopOf="@id/achievements_textView"
                app:layout_constraintTop_toBottomOf="@+id/name_textView">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="#6b000000"
                    android:progressTint="#7affffff"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

            <TextView
                android:id="@+id/achievements_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6b000000"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/default_margin_halved"
                android:paddingEnd="@dimen/default_margin"
                android:paddingStart="@dimen/default_margin"
                android:paddingTop="@dimen/default_margin_halved"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/progressContainer" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>