<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="com.crepetete.steamachievements.model.Game" />

        <import type="com.crepetete.steamachievements.model.Achievement" />

        <import type="com.crepetete.steamachievements.utils.resource.Resource" />

        <!--<variable-->
            <!--name="game"-->
            <!--type="Game" />-->

        <variable
            name="gameResource"
            type="Resource" />

        <variable
            name="achievements"
            type="java.util.List" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main_collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginEnd="@dimen/default_margin"
                app:expandedTitleMarginStart="@dimen/default_margin"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:transitionName="banner"
                    app:layout_collapseMode="parallax" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#64000000"
                    android:fitsSystemWindows="true" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/default_margin">

                <TextView
                    android:id="@+id/playtime_header_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_playtime"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_header" />

                <LinearLayout
                    android:id="@+id/container_recent_playtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_halved"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/playtime_header_textview">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_quarter"
                        android:labelFor="@+id/recently_played_textView"
                        android:text="@string/header_recent_playtime"
                        android:textColor="@color/colorTextLabel"
                        android:textSize="@dimen/text_label" />

                    <TextView
                        android:id="@+id/recently_played_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_total_playtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_halved"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/container_recent_playtime">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_quarter"
                        android:labelFor="@+id/total_played_textView"
                        android:text="@string/header_total_playtime"
                        android:textColor="@color/colorTextLabel"
                        android:textSize="@dimen/text_label" />

                    <TextView
                        android:id="@+id/total_played_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_achievements_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/button_sort_achievements"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_total_playtime">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/header_achievements"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_header" />

                    <TextView
                        android:id="@+id/sorting_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sorting_method_achieved"
                        android:textColor="@color/colorTextLabel"
                        android:textSize="@dimen/text_label" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_sort_achievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparant"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/action_sort"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_button"
                    app:layout_constraintBottom_toBottomOf="@+id/container_achievements_header"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/container_achievements_header" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/latest_achievements_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="10dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_achievements_header"
                    card_view:cardUseCompatPadding="true" />

                <TextView
                    android:id="@+id/graph_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_quarter"
                    android:layout_marginTop="@dimen/default_margin"
                    android:labelFor="@+id/graph_textView"
                    android:text="@string/header_achievements_over_time"
                    android:textColor="@color/colorTextLabel"
                    android:textSize="@dimen/text_label"
                    app:layout_constraintTop_toBottomOf="@+id/latest_achievements_recyclerview" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/default_margin"
                    app:layout_constraintTop_toBottomOf="@+id/graph_textView" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>