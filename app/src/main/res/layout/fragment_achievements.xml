<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.fragment.achievements.AchievementsFragment">

    <TextView
        android:id="@+id/label_total_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/textview_total_achievements"
        android:paddingBottom="8dp"
        android:text="Total Achievements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_total_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingBottom="16dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_total_achievements" />

    <TextView
        android:id="@+id/label_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/textview_completion"
        android:paddingBottom="8dp"
        android:text="Completion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_total_achievements" />

    <TextView
        android:id="@+id/textview_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="24sp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_completion" />

</android.support.constraint.ConstraintLayout>