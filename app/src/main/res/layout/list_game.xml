<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:elevation="10dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333">

        <ImageView
            android:id="@+id/game_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:transitionName="banner"
            app:layout_constraintBottom_toBottomOf="@id/game_banner"
            app:layout_constraintDimensionRatio="184:69"
            app:layout_constraintEnd_toStartOf="@id/time_info_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/time_info_container"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="#73000000"
            app:layout_constraintBottom_toBottomOf="@id/game_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@drawable/game_banner"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/total_played_textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_all_time_24dp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:paddingStart="17dp"
                android:paddingTop="8dp"
                android:textColor="#fff"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/recently_played_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/recently_played_textView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_recent_black_24dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:textColor="#fff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_played_textView" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#57000000"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/progressContainer"
            app:layout_constraintTop_toBottomOf="@+id/game_banner" />

        <FrameLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintBottom_toTopOf="@id/achievements_textView"
            app:layout_constraintTop_toBottomOf="@+id/name_textView">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="#6b000000"
                android:progressTint="#7affffff"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/achievements_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6b000000"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/progressContainer" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>