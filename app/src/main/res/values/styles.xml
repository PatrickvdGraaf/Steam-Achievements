<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- BUTTON -->
    <style name="AppTheme.Button.Clear" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CONTAINER -->

    <!-- TEXT -->
    <style name="AppTheme.Text.Header" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="AppTheme.Text.Label" parent="AppTheme">
        <item name="android:textColor">@color/colorTextLabel</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_quarter</item>
    </style>

    <style name="AppTheme.Text.Value" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Value.Big" parent="AppTheme.Text.Value">
        <item name="android:textSize">@dimen/text_header_six</item>
    </style>

    <!-- ACHIEVEMENTS-->
    <style name="AppTheme.Achievements.ListItem.Icon" parent="AppTheme">
        <item name="android:background">#00000000</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:width">@dimen/list_achievement_image_size</item>
        <item name="android:height">@dimen/list_achievement_image_size</item>
    </style>

    <style name="AppTheme.Achievements.ListItem.Text" parent="AppTheme">
        <item name="android:paddingEnd">@dimen/default_margin_quarter</item>
        <item name="android:paddingStart">@dimen/default_margin_quarter</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Achievements.ListItem.Text.Title" parent="AppTheme.Achievements.ListItem.Text">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_body_two</item>
    </style>

    <style name="AppTheme.Achievements.ListItem.Text.Date" parent="AppTheme.Achievements.ListItem.Text">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorTextLabel</item>
        <item name="android:textSize">@dimen/text_label_small</item>
    </style>

    <style name="AppTheme.Achievements.RecyclerView" parent="AppTheme.Achievements.ListItem.Text">
        <item name="android:clipToPadding">false</item>
        <item name="paddingStart">@dimen/default_margin</item>
        <item name="paddingEnd">@dimen/default_margin</item>
    </style>
</resources>
