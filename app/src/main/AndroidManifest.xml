<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.crepetete.steamachievements">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.SteamAchievementsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".presentation.activity.news.NewsDetailActivity"></activity>
        <activity android:name=".presentation.activity.image.ImageFullScreenActivity" />
        <activity
            android:name=".presentation.activity.splash.SplashScreenActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" /> <!-- LOGIN -->
        <activity android:name=".presentation.activity.login.LoginActivity" />
        <activity android:name=".presentation.activity.main.MainActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_games" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity> <!-- GAME DETAIL -->
        <activity
            android:name=".presentation.activity.game.GameActivity"
            android:theme="@style/Transparent" /> <!-- PAGER -->
        <activity
            android:name=".presentation.activity.achievements.TransparentPagerActivity"
            android:theme="@style/Transparent" />
    </application>

</manifest>